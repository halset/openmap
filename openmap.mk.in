# ------------------------------------------------------------
# User settings.  Change these if necessary
# ------------------------------------------------------------
#srcdir = @srcdir@
#top = @top_srcdir@

#for architecture independent files
prefix = @prefix@

#for architecture dependent files
exec_prefix = @exec_prefix@

#for user executables
bindir = @bindir@

#for executables that other programs run
libexecdir = @libexecdir@

#for executables that administrators run
sbindir = @sbindir@

#for object code libraries (jar files)
libdir = @libdir@

#for read-only architecture independent data
datadir = @datadir@

#for read-only single machine data
sysconfdir = @sysconfdir@

#for modifiable architecture independent data
sharedstatedir = @sharedstatedir@

#for modifiable single machine data
localstatedir = @localstatedir@

JAVA = @JAVA@
JAVAC = @JAVAC@
JAR = @JAR@
JAVADOC = CLASSPATH=$(CLASSPATH) @JAVADOC@
SWING_JAR = @SWING_JAR@

# Java compiler flags for optimizing
JFLAGS_OPT = -J-mx128m -O

# Java compiler flags for development
JFLAGS_DEV = -J-mx128m -g -deprecation

# Command line flags handed to the java compiler
JFLAGS = $(JFLAGS_DEV)

#
# Install settings
#
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

INSTALL.dir =		${INSTALL} -d
INSTALL.jar =		${INSTALL_DATA}
INSTALL.bin =		${INSTALL} -m 555
INSTALL.class =		${INSTALL_DATA}
INSTALL.image =		${INSTALL_DATA}
INSTALL.props =		${INSTALL_DATA}
INSTALL.data =		${INSTALL_DATA}
INSTALL.doc =		${INSTALL_DATA}

# ------------------------------------------------------------
# End of User settings
# ------------------------------------------------------------


# ------------------------------------------------------------
# Java to class file rule
# ------------------------------------------------------------

# add some new suffixes for java related files
.SUFFIXES: .java .class

# *.java to *.class make rule
.java.class:
	CLASSPATH=$(CLASSPATH) $(JAVAC) $(JFLAGS) $<

# ------------------------------------------------------------
# End of Java to class file rule
# ------------------------------------------------------------

#####################
# computed settings #
#####################

# !! WARNING !!
# TOP must be set by the Makefile that is including this makefile.
#
CLASSPATH = ${TOP}:${SWING_JAR}:@CORBA_CLASSPATH@

INSTALL_DIR = ${TOP}/tmp

