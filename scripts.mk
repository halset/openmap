include $(SCRIPTS_DIR)/version
include jar.mk


#########
# rules #
#########
newversion:
		$(PERL) $(SCRIPTS_DIR)/NewVersion.pl $(VERSION_FILE)

majorversion:
		$(PERL) $(SCRIPTS_DIR)/NewVersion.pl $(VERSION_FILE) -major

