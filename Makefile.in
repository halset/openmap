TOP = @top_srcdir@

############
# includes #
############
include ${TOP}/openmap.mk



#########
# rules #
#########

# java compile OpenMap code
all:
	cd com && $(MAKE) $@

clean:
	cd com && $(MAKE) $@

install:
	cd com && $(MAKE) $@

#----------------------------------------------------------------------
# OpenMap targets
#----------------------------------------------------------------------

#include scripts.mk

# changes the hardcoded version information in the java code and in
# the etc/scripts directory, recompiles OpenMap and makes a jar file
# of the new version.
build-version:
	$(MAKE) newversion
	$(MAKE) openmap-version

build-major-version:
	$(MAKE) majorversion
	$(MAKE) openmap-version

openmap-version:
	$(MAKE) all
	$(MAKE) openmap-version.jar -f scripts.mk

openmap.jar:
	jar cf openmap.jar $(OPENMAP.JAR)

applet.jar:
	jar cf applet.jar $(APPLET.JAR)
