<?xml version="1.0"?>
<project name="OpenMap WMS Servlet" default="rebuild" basedir=".">
	<target name="init" 
	        description="Sets properties needed by the other targets.">
        	<tstamp/>
		<property name="openmap.home" value="../.."/>
		<property name="omwms.home" value="."/>
		<property name="omwms.src_dir" value="./WEB-INF/src"/>
		<property name="omwms.lib_dir" value="./WEB-INF/lib"/>
		<property name="omwms.classes" value="./WEB-INF/classes"/>

		<!-- YOU HAVE TO CHANGE THIS TO MATCH YOUR TOMCAT INSTALLATION -->
		<!--<property name="tomcat.home" value="/usr/local/java/jakarta-tomcat-4.0.1"/>-->
		<property name="tomcat.home" value="/Users/halset/projects/ext/tomcat/apache-tomcat-5.5.20/"/>

		<property name="javac.excludes" value="**/*.in, **/Makefile, **/*.bat,
		                                       **/ChangeLog, **/*.html, **/*.txt,
						       **/*.*.txt, **/*.dat,
						       **/*.pl" />
                <!-- The first jar is the tomcat 4 version
                     (servlet.jar), the second is the tomcat 5 version (servlet-api.jar).
                     Use the one that fits what you have.  -->
		<!--<property name="tomcat.jar" value="${tomcat.home}/common/lib/servlet.jar"/>-->
		<property name="tomcat.jar" value="${tomcat.home}/common/lib/servlet-api.jar"/>
		<property name="openmap.jar" value="${openmap.home}/lib/openmap.jar"/>
                <property name="omwms.jar" value="${omwms.lib_dir}/openmap.jar"/>
	</target>

	<!--  ############################
	      End of property setup.
	      ############################ -->  

	<!--  ############################
	      Main targets
	      ############################ -->  

	<target name="todo" 
	        depends="classes, jar" 
                description="Compiles all of the OpenMap classes and builds jar files in lib directory."/>

	<target name="classes" 
	        depends="omwms" 
                description="Compiles WMS Servlet classes."/>

	<target name="all" 
	        depends="war,jar"
		description="Compiles WMS Servlet classes and creates the war (web archive) file."/>

	<target name="rebuild" 
	        depends="clean, all"
		description=" Rebuilds WMS Servlet classes and creates the war (web archive) file."/>
                
	<target name="war"
	        depends="classes"
		description="Builds jar files, placing them in the lib directory.">

		<jar jarfile="${omwms.home}/omwms.war"
		   basedir="${omwms.home}"
		   includes="**, **/*.jsp, **/*.html"
		   excludes="**/*.war, **/build.xml, **/src/**" /> 

	</target>    
  
	<target name="jar"
	        depends="classes"
		description="Builds jar files, placing them in the lib directory.">

		<jar jarfile="${omwms.home}/omwms.jar">
		  <fileset dir="${omwms.classes}"/>
		</jar>

	</target>    
  
  <!--  ############################
	Standard target, to build everything you can.
	############################ -->  
	<target name="omwms" depends="init" 
		description="Compiles the WMS Servlet classes. ">
	     <echo message="Building WMS Servlet classes..."/>
	     <mkdir dir="${omwms.lib_dir}"/>
             <copy todir="${omwms.lib_dir}">
                <fileset dir="${openmap.home}/lib"
                  includes="**/*.jar"/>
             </copy>
	     <mkdir dir="${omwms.classes}"/>
	     <javac srcdir="${omwms.src_dir}" 
	            destdir="${omwms.classes}"
		    classpath="${tomcat.jar};${omwms.jar}"
		    excludes="${javac.excludes}, ${dependency.excludes}"/>
	</target>

  <!--  ############################
	Build the documentation.
	############################ -->  
	<target name="docs" 
	        depends="init"
		description="Make the javadoc API html documents.">
	     <javadoc sourcepath="${openmap.home}"
	              destdir="${openmap.home}/doc/api"
			maxmemory="256m"
	excludepackagenames="**unimplemented**"
		      packagenames="com.bbn.openmap.*"
		      author="true"
		      version="true"
		      use="true"
		      windowtitle="OpenMap API"
		      doctitle="OpenMap"
		      bottom="Copyright (C) 2002, BBNT Solutions LLC; See http://openmap.bbn.com/ for details" />
	</target>

  <!--  ############################
	Cleanup targets
	############################ -->  
	<target name="clean" 
	        depends="clean_classes, clean_jars"
		description="Delete jar files and all class files"/>

	<target name="distclean"
	        depends="clean_classes"
		description="Delete class files, but not the jar files."/>

	<target name="clean_all"
	        depends="clean, clean_docs"
		description="Delete jar files, class files, and generated documentation."/>

	<target name="clean_classes" 
	        depends="init"
		description="Delete the OpenMap class files.">
	     <delete dir="${omwms.classes}" />
	</target>

	<target name="clean_jars"
	        description="Delete only the jar files from the lib directory.">
	     <delete file="${omwms.home}/omwms.war"/>
	     <delete file="${omwms.home}/omwms.jar"/>
	</target>

	<target name="clean_docs"
                description="Delete only the generated API documentation.">
	     <delete dir="doc/com"/>
	     <delete>
	          <fileset dir="doc" includes="**/*.html" excludes="doc-index.html"/>
	     </delete>
	     <delete file="doc/stylesheet.css"/>
	     <delete file="doc/package-list"/>
	</target>

	<target name="deploy" depends="init">
	     <delete dir="${tomcat.home}/webapps/omwms"/>
             <copy todir="${tomcat.home}/webapps" file="${omwms.home}/omwms.war"/>
	</target>
        
  <!--  ############################
	End of cleanup targets.
	############################ -->  

</project>

